// CRITICAL FIX: Patch ErrorEvent bug in Neon driver - Enhanced version
if (typeof globalThis !== 'undefined' && globalThis.ErrorEvent) {
  const OriginalErrorEvent = globalThis.ErrorEvent;
  
  // @ts-ignore - Override global ErrorEvent
  globalThis.ErrorEvent = class extends OriginalErrorEvent {
    public message: string;
    
    constructor(type: string, eventInitDict?: any) {
      super(type, eventInitDict);
      // Force writable message property
      this.message = eventInitDict?.message || eventInitDict?.error?.message || '';
      
      // Additional safety - define as configurable property
      try {
        Object.defineProperty(this, 'message', {
          value: this.message,
          writable: true,
          configurable: true,
          enumerable: true
        });
      } catch (e) {
        // Silent fallback
      }
    }
  };
}

// Re-export sql for other modules
